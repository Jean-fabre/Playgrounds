<%= content_for :title do  %>
Reviews - Playgrounds
<% end %>

  <div class="message">

  <%= cl_image_tag review.user.player.try(:photo),height: 200, width: 200, crop: :fill, crop: :thumb, class: "card-user" %>

  <div class="message-name">
    <h3><%= review.user.player.try(:first_name).capitalize %>
        <%= review.user.player.try(:last_name).capitalize %></h3>
        <p><% review.user.player.try(:created_at) %></p>
  </div>

  <div class="message-content">
    <p class="comment">
      <% review.rating.times do %>
    <i class="fas fa-star"></i>
    <% end %>
    </p>
  </div>


 <div class="message-body">
    <p><strong>"<%= review.comment %>"</strong></p>
  </div>


</div>
