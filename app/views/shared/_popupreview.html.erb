<!-- Modal -->
<div class="modal fade" id="exampleModal<%= club.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel2"><%= content_for :title do %>
          Reservation - Playgrounds
        <% end %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [club, review] do |f|  %>
        <%= f.error_notification %>
        <%= f.input :rating %>
        <%= f.input :comment %>
        <%= f.submit "Create Review", class: "btn btn-success"%>
      <% end %>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


