<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= content_for :title do %>
          Reservation - Playgrounds
        <% end %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [club, field, event] do |f| %>
          <p>
            <%= f.input :start_date, as: :datetime, start_year: Date.today.year,
              end_year: Date.today.year + 1,
              order: [:hour, :minute,:day, :month, :year], label: "When would you like to play?" %></p>
          <p><%= f.input :end_date, as: :datetime, order: [:hour, :minute], label: "Untill" %>
            <%= f.input :description, label: "Special requests"%></p>

          <%= f.submit "Complete your reservation", class: 'btn btn-primary' %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


