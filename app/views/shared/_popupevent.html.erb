<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= content_for :title do %>
          Reservation - Playgrounds
        <% end %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [club, field, event] do |f| %>
          <p>When are you playing.
            <%= f.datetime_local_field :start_date,{
            class: "form-control",
            placeholder: "When?" }
          %></p>
          <p>Untill
            <%= f.datetime_local_field :end_date,{
            class: "form-control",
            placeholder: "When?"}
          %></p>

          <%= f.input :description %>

          <%= f.submit "Complete your reservation", class: 'btn btn-primary' %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


