<div class="container">

    <h1>Find a field ! </h1>
  <h2><em>(field/index)</em></h2>

  <div class="row">
    <%= form_tag club_fields_path, method: :get do %>
      <div class="col-xs-12 col-sm-3">

        <p><%= select_tag :field_type,
          options_for_select(["Tennis", "Squash", "Padel"]),
          class: "form-control",
          placeholder: "Field type" %>
          </p>
      </div>
      <div class="col-xs-12 col-sm-3">

        <p><%= text_field_tag :club_address,
          params[:club_address],
          class: "form-control",
          placeholder: "City"

        %></p>
      </div>
      <div class="col-xs-12 col-sm-3">

        <p><%= datetime_local_field_tag :start_date,
          params[:start_date],
          class: "form-control",
          placeholder: "When?"
        %></p>

          <p><%= datetime_local_field_tag :end_date,
          params[:end_date],
          class: "form-control",
          placeholder: "When?"
        %></p>
      </div>

      <div class="col-xs-12 col-sm-3">
        <p><%= submit_tag 'Search', class: 'btn btn-primary'%>  <%= link_to 'Home', root_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

<div
  id="map"
  style="width: 50%;
  height: 400px;"
  data-markers="<%= @markers.to_json %>"
></div>
