<%= content_for :title do  %>
Clubs - Playgrounds
<% end %>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path "background_filet.jpg" %>);">
  <div class="new_user_club" style="color: black">
    <div class="text-center" style="color: white">
    <h2>Add your club</h2>
    </div>
    <%= simple_form_for @club do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :city %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
    <div class="text-center">
      <%= f.submit "Create Club", class: "btn btn-primary"%>
    </div>
  </div>
  <% end %>
</div>
