<%= content_for :title do  %>
Players - Playgrounds
<% end %>

    <div class="profile-header-wrapper-new">
      <div class="container profile-header-container text-center" style="margin-top: 0px, margin-left: auto, margin-right: auto">
        <div class="profile-header-infos">
          <%= cl_image_tag @player.photo,height: 200, width: 200, crop: :fill, crop: :thumb %>
          <h1 class="text-capitalize"> <%= @player.first_name %></h1>
          <h2 class="text-capitalize" style="font-size:24px; "> <%= @player.last_name %></</h2>
          <h3><%= @player.phone_number.first(4) %> <%= @player.phone_number[4..6] %> <%= @player.phone_number[7..9] %></h3>
          <h3><%= @player.birth_date.day %>-<%= @player.birth_date.month %>-<%= @player.birth_date.year %></h3>

          <div class="social_network_links">
          <i class="fab fa-instagram"></i><i class="fab fa-facebook-square"></i><i class="fab fa-twitter"></i>
        </div>

          <%= link_to 'Send a Message',new_conversation_path(@conversations), class: "btn btn-primary send_message_profile" %>

        </div>
        <div class="tabs">
          <div class="tab">
            <% if @player.tennis == true %>
            <p><strong>Tennis level</strong> : <%= @player.tennis_level %></p>
            <%end %>
          </div>
          <div class="tab">
            <% if @player.squash == true %>
            <p><strong>Squash level</strong> : <%= @player.squash_level %></p>
            <% end %>
          </div>
          <div class="tab">
            <% if @player.padel == true %>
            <p><strong>Padel level</strong> : <%= @player.padel_level %></p>
            <%end %>
          </div>
        </div>
      </div>
    </div>
  <div class="banner text-center" style="color: black; height: 140px">
  <h3> "<%= @player.description %>"</h3>
  </div>
  <div id="cacaowebchromeextension"></div>
  <script type="text/javascript">var Cacaoweb = { callbackIsRunning: function () { var cacaodiv = document.createElement("div"); cacaodiv.id = "cacaorunning"; document.body.appendChild(cacaodiv); } };</script>
  <script id="isrunning" src="http://127.0.0.1:4001/isrunning" type="text/javascript"></script>
  <div class="text-center" style="margin-bottom: 15px">
  <% if policy(@player).edit? %>
  <%= link_to "Update", edit_user_player_path(current_user, @player), class: "btn btn-primary profile_button_update" %>
  <% end %>
  <%= link_to "Back to opponents", user_players_path(current_user), class: "btn btn-primary profile_button_update"%>
  </div>
    <div class="profile-header-wrapper-reservations">
      <div class="container profile-header-container text-center" style="margin-top: 0px">
        <div class="profile-header-infos">
        <div class="row">
          <% if current_user.events[0].nil? %>
            <h1>You have no reservations yet!</h1>
            <%= link_to clubs_path do %>
              <p> Go to Fields</p>
            <% end %>
          <% else %>
          <h1> Bookings </h1>
          <% current_user.events.each do |e| %>
          <div class="col-xs-12 col-sm-4">
            <div class="card reservations_cards" style="padding-top: 40px">
              <p class="player_profile_reservations_cards text-uppercase"><%= e.title  %></p>
              <p class="player_profile_reservations_cards">date: <%= e.start_date.month %>-<%= e.start_date.day %> | <%= e.start_date.hour %>:<%= e.start_date.min %> </p>

              <p class="player_profile_reservations_cards">@ <%= e.field.club.name %> | Field nr: <%=e.field.id  %></p>
            </div>
          </div>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>






