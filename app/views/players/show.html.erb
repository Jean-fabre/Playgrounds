<div class="container">
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6">

      <h1>Your profile</h1>
      <ul>
        <li>First name    : <%= @player.first_name %></li>
        <li>Last name     :<%= @player.last_name %></li>
        <li>Phone number  : <%= @player.phone_number %></li>
        <li>Birth date    :<%= @player.birth_date %></li>
        <li>Description   :<%= @player.description%></li>
        <% if @player.tennis == true %>
        <li>Plays tennis with current level :<%= @player.tennis_level %></li>
        <%end %>
        <% if @player.squash == true %>
        <li>Plays squash with current level : <%= @player.squash_level %></li>
        <%end %>
        <% if @player.padel == true %>
        <li>Plays padel with current level : <%= @player.padel_level %></li>
        <%end %>
      </ul>
    </div>
  </div>
</div>


